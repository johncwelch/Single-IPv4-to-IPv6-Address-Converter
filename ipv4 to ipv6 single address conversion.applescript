property ipv6addressPrefix : "0:0:0:0:0:ffff:"property ipv6Address : ""property ip6tablesStatement : ""global ipv6AddressBitglobal theOctetset ipv6AddressBit to ""set theOctet to ""set theipv4address to text returned of (display dialog "enter a valid IPv4 address to convert to IPv6" default answer "")set saveTID to AppleScript's text item delimitersset AppleScript's text item delimiters to {"."}set theOctet to the first text item of theipv4address as integerset ipv6AddressBit to ipv6AddressBit & (do shell script "perl -e 'printf(\"%x\", " & theOctet & ")'")set theOctet to second text item of theipv4address as integerset ipv6AddressBit to ipv6AddressBit & (do shell script "perl -e 'printf(\"%x\", " & theOctet & ")'")set ipv6AddressBit to ipv6AddressBit & ":"set theOctet to third text item of theipv4address as integerset ipv6AddressBit to ipv6AddressBit & (do shell script "perl -e 'printf(\"%x\", " & theOctet & ")'")set theOctet to fourth text item of theipv4address as integerset ipv6AddressBit to ipv6AddressBit & (do shell script "perl -e 'printf(\"%x\", " & theOctet & ")'")set ipv6Address to ipv6addressPrefix & ipv6AddressBitset AppleScript's text item delimiters to saveTIDdisplay dialog "The IPv6 version of " & theipv4address & " is " & ipv6Address